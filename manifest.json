{
  "name": "StalkerMode",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Disables/Hides fb buttons (like, comment, add etc)",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "No Likes!",
	"default_icon": "no-facebook-like.png"
  },
  "permissions": [
    "https://www.facebook.com/*",
    "http://www.facebook.com/*",
    "tabs"
  ]
}